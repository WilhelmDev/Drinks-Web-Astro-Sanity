---
import logo from '../img/logo-black2.jpg'
const pathname = Astro.url.pathname
---

<header class="header">
    <div class="contenedor barra">
        <a href="/">
            <img src={logo} alt="logo image">
        </a>
        <nav class="navegacion">
            <a href="/" class={pathname === '/' ? 'active' : ''} >Inicio</a>
            <a href="/rum"class={pathname === '/rum' ? 'active' : ''} >Ron</a>
            <a href="/whiskey" class={pathname === '/whiskey' ? 'active' : ''}>Whiskey</a>
            <a href="/about" class={pathname === '/about' ? 'active' : ''}>Nosotros</a>
        </nav>
    </div>
</header>

<style>
.header {
    background-image: linear-gradient(to right, rgb(0 0 0 / .8), rgb(0 0 0 / .7)), url(../img/header4.jpg);
    padding: 2rem 0;
    background-position: center;
    background-size: cover;
}
.header img {
    width: 12rem;
    mix-blend-mode: exclusion;
}

.barra {
    display: flex;
    flex-direction: column;
    align-items: center;
}
@media (min-width: 768px) {
    .barra {
        flex-direction: row;
        justify-content: space-between;
    }
}

.navegacion {
    margin-top: 5rem;
    display: flex;
    align-items: center;
    gap: 2rem;
}
@media (min-width: 768px) {
    .navegacion {
        margin: 0;
    }
}
.navegacion a {
    color: var(--white);
    text-decoration: none;
    border-radius: .7rem;
    font-size: 1.4rem;
    font-weight: 700;
    text-transform: uppercase;
    padding: .5rem;
    transition-property: background-color;
    transition-duration: 300ms;
}
.navegacion a:hover,
.active {
    background-color: var(--primary);
}
</style>