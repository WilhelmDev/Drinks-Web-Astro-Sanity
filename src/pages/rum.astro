---
import { getRum } from '../../client';
import BottleList from '../components/BottleList.astro';
import Layout from '../layouts/Layout.astro';
const rumBottles = await getRum()
---

<Layout title='Ron' description='Tienda de Bebidas Personalizada'>
	<main class="contenedor">
		<h1 class="heading">Ron</h1>
		<div class="grid">
			{rumBottles?.map((item) => (
				<BottleList 
				name={item.name} image={item.drink_image_cloud.url}
				price={item.price} url={item.url_product.current}
				/>
			))}
			
		</div>
	</main>
</Layout>

